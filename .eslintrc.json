{
  "root": true,
  "extends": [
    "@jakejarvis/eslint-config",
    "plugin:no-unsanitized/DOM",
    "plugin:lit/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "requireConfigFile": false,
    "babelOptions": {
      "presets": [
        [
          "@babel/preset-env"
        ]
      ]
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "polyfills": [
      "fetch"
    ]
  },
  "overrides": [{
    // Serverless functions
    "files": [
      "api/**/*.js"
    ],
    "rules": {
      "compat/compat": "off"
    },
    "env": {
      "browser": false,
      "node": true
    }
  }],
  "ignorePatterns": [
    "public/**",
    "static/assets/**",
    "gulpfile.js",
    "webpack.config.js"
  ]
}
